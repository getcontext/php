<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="fos_user.alltrue.form.factory" class="FOS\UserBundle\Form\Factory\FormFactory">
            <argument type="service" id="form.factory" />
            <argument>%fos_user.alltrue.form.name%</argument>
            <argument>%fos_user.alltrue.form.type%</argument>
        </service>

        <service id="fos_user.alltrue.form.type" class="Salamon\Bundle\CovusBundle\Form\AllTrueFormType">
            <tag name="form.type" alias="fos_user_alltrue" />
            <argument>%fos_user.model.user.class%</argument>
        </service>

    </services>

</container>